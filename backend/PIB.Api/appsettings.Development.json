{
  "Auth": {
    "Issuer": "https://dev-macadam.us.auth0.com/",
    "Audience": "pib"
  },
  "Mongo": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "app"
  },
  "AppConfig": {
      "Endpoint": "https://pib-configuration.azconfig.io"
  },
  "BlobStorage": {
    "PlantPictureContainer": "devplantpicture"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341",
          "apiKey": "none"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "ApplicationName": "PIB - API"
    }
  },
  "FeatureManagement":{
    "FeatureA": true,
    "FeatureB": false
  }
}
