{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base"],
    "packageRules": [
        {
            "matchUpdateTypes": ["minor", "patch", "pin"],
            "automerge": true
        },
        {
            "matchPackagePatterns": ["^@mantine"],
            "groupName": "mantine"
        },
        {
            "matchPackagePatterns": ["^@nivo"],
            "groupName": "nivo"
        },
        {
            "matchPackagePatterns": ["^@emotion"],
            "groupName": "emotion"
        }
    ]
}
